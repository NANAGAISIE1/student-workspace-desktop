{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "Node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@shared/*": ["src/shared/*"],
      "@renderer/*": ["src/renderer/*"]
    }
  },
  "references": [{ "path": "./tsconfig.app.json" }]
}
